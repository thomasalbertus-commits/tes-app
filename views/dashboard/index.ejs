<% const s = serviceStats; const tx = txSummary; %>

<!-- KPI Cards -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-2xl p-4 md:p-6 border border-slate-200 shadow-sm">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs font-semibold text-blue-600 uppercase">Antrian</span>
      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
        <i data-lucide="clock" class="w-4 h-4 text-blue-600"></i>
      </div>
    </div>
    <p class="text-2xl md:text-3xl font-extrabold text-slate-800"><%= s.antrian %></p>
    <p class="text-xs text-slate-500 mt-1">Menunggu dikerjakan</p>
  </div>
  
  <div class="bg-white rounded-2xl p-4 md:p-6 border border-slate-200 shadow-sm">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs font-semibold text-yellow-600 uppercase">Dikerjakan</span>
      <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center">
        <i data-lucide="wrench" class="w-4 h-4 text-yellow-600"></i>
      </div>
    </div>
    <p class="text-2xl md:text-3xl font-extrabold text-slate-800"><%= s.dikerjakan %></p>
    <p class="text-xs text-slate-500 mt-1">Sedang proses</p>
  </div>
  
  <div class="bg-white rounded-2xl p-4 md:p-6 border border-slate-200 shadow-sm">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs font-semibold text-green-600 uppercase">Selesai</span>
      <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
        <i data-lucide="check-circle" class="w-4 h-4 text-green-600"></i>
      </div>
    </div>
    <p class="text-2xl md:text-3xl font-extrabold text-slate-800"><%= s.selesai %></p>
    <p class="text-xs text-slate-500 mt-1">Siap diambil</p>
  </div>
  
  <div class="bg-white rounded-2xl p-4 md:p-6 border border-slate-200 shadow-sm">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs font-semibold text-purple-600 uppercase">Profit</span>
      <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
        <i data-lucide="trending-up" class="w-4 h-4 text-purple-600"></i>
      </div>
    </div>
    <p class="text-lg md:text-2xl font-extrabold text-slate-800"><%= formatCurrency(tx.netProfit) %></p>
    <p class="text-xs text-slate-500 mt-1">Net profit</p>
  </div>
</div>

<!-- Filter Bar -->
<div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm mb-6">
  <div class="flex flex-wrap gap-2 items-center">
    <span class="text-sm font-semibold text-slate-600">Filter:</span>
    <a href="/dashboard?filter=today" class="px-3 py-1.5 rounded-lg text-sm font-bold transition-all <%= filter === 'today' ? 'bg-blue-600 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">Hari Ini</a>
    <a href="/dashboard?filter=month" class="px-3 py-1.5 rounded-lg text-sm font-bold transition-all <%= filter === 'month' ? 'bg-blue-600 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">Bulan Ini</a>
    <a href="/dashboard?filter=year" class="px-3 py-1.5 rounded-lg text-sm font-bold transition-all <%= filter === 'year' ? 'bg-blue-600 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">Tahun Ini</a>
  </div>
</div>

<!-- Financial Summary -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl p-5 text-white">
    <div class="flex items-center gap-3 mb-2">
      <i data-lucide="arrow-down-circle" class="w-6 h-6 opacity-80"></i>
      <span class="text-sm font-semibold opacity-90">Pemasukan</span>
    </div>
    <p class="text-xl md:text-2xl font-extrabold"><%= formatCurrency(tx.income) %></p>
  </div>
  
  <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-2xl p-5 text-white">
    <div class="flex items-center gap-3 mb-2">
      <i data-lucide="arrow-up-circle" class="w-6 h-6 opacity-80"></i>
      <span class="text-sm font-semibold opacity-90">Pengeluaran</span>
    </div>
    <p class="text-xl md:text-2xl font-extrabold"><%= formatCurrency(tx.expense) %></p>
  </div>
  
  <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-5 text-white">
    <div class="flex items-center gap-3 mb-2">
      <i data-lucide="wallet" class="w-6 h-6 opacity-80"></i>
      <span class="text-sm font-semibold opacity-90">Nilai Stok</span>
    </div>
    <p class="text-xl md:text-2xl font-extrabold"><%= formatCurrency(stockValue.totalSell) %></p>
  </div>
</div>

<!-- Quick Actions -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
  <a href="/services/new" class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm hover:shadow-md transition-all flex items-center gap-3">
    <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
      <i data-lucide="plus" class="w-5 h-5 text-blue-600"></i>
    </div>
    <div>
      <p class="text-sm font-bold text-slate-800">Servis Baru</p>
      <p class="text-xs text-slate-500">Tambah servis</p>
    </div>
  </a>
  <a href="/sales/new" class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm hover:shadow-md transition-all flex items-center gap-3">
    <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center">
      <i data-lucide="shopping-cart" class="w-5 h-5 text-green-600"></i>
    </div>
    <div>
      <p class="text-sm font-bold text-slate-800">Jual</p>
      <p class="text-xs text-slate-500">Penjualan baru</p>
    </div>
  </a>
  <a href="/inventory" class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm hover:shadow-md transition-all flex items-center gap-3">
    <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
      <i data-lucide="boxes" class="w-5 h-5 text-purple-600"></i>
    </div>
    <div>
      <p class="text-sm font-bold text-slate-800">Stok</p>
      <p class="text-xs text-slate-500">Cek inventory</p>
    </div>
  </a>
  <a href="/reports" class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm hover:shadow-md transition-all flex items-center gap-3">
    <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center">
      <i data-lucide="file-text" class="w-5 h-5 text-orange-600"></i>
    </div>
    <div>
      <p class="text-sm font-bold text-slate-800">Laporan</p>
      <p class="text-xs text-slate-500">Lihat report</p>
    </div>
  </a>
</div>

<!-- Recent Services & Low Stock -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Services -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
    <div class="p-4 border-b border-slate-200 flex items-center justify-between">
      <h3 class="font-bold text-slate-800">Servis Terbaru</h3>
      <a href="/services" class="text-sm text-blue-600 font-semibold hover:underline">Lihat Semua →</a>
    </div>
    <div class="p-4 space-y-3">
      <% if (recentServices.length === 0) { %>
        <p class="text-sm text-slate-500 text-center py-4">Belum ada data servis</p>
      <% } %>
      <% recentServices.forEach(svc => { %>
        <a href="/services/<%= svc.id %>" class="block p-3 bg-slate-50 rounded-xl hover:bg-slate-100 transition-colors">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-bold text-slate-800"><%= svc.customer_name %></p>
              <p class="text-xs text-slate-500"><%= svc.unit_type %> • #<%= svc.token %></p>
            </div>
            <span class="px-2 py-1 rounded-full text-xs font-bold <%= statusColor(svc.status) %>"><%= svc.status %></span>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
  
  <!-- Low Stock Alert -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
    <div class="p-4 border-b border-slate-200 flex items-center justify-between">
      <h3 class="font-bold text-slate-800">⚠️ Stok Rendah</h3>
      <a href="/inventory?tab=alert" class="text-sm text-blue-600 font-semibold hover:underline">Lihat Semua →</a>
    </div>
    <div class="p-4 space-y-3">
      <% if (lowStock.length === 0) { %>
        <p class="text-sm text-green-600 text-center py-4">✅ Semua stok aman</p>
      <% } %>
      <% lowStock.slice(0, 5).forEach(item => { %>
        <div class="flex items-center justify-between p-3 bg-red-50 rounded-xl">
          <div>
            <p class="text-sm font-bold text-slate-800"><%= item.name %></p>
            <p class="text-xs text-slate-500"><%= item.category || '-' %></p>
          </div>
          <div class="text-right">
            <p class="text-sm font-bold text-red-600"><%= item.stock %> / <%= item.min_stock %></p>
            <p class="text-xs text-red-500">Perlu restok</p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
