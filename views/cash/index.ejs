<!-- Cash Accounts -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <% cashAccounts.forEach(acc => { %>
    <div class="bg-white rounded-2xl p-5 border border-slate-200 shadow-sm">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full" style="background: <%= acc.color %>"></div>
          <h3 class="font-bold text-slate-800"><%= acc.name %></h3>
        </div>
        <span class="px-2 py-1 rounded-full text-xs font-bold bg-slate-100 text-slate-600 capitalize"><%= acc.type %></span>
      </div>
      <p class="text-2xl font-extrabold text-blue-700 mb-3"><%= formatCurrency(acc.balance) %></p>
      <div class="flex gap-2">
        <button onclick="editAccount(<%= JSON.stringify(acc).replace(/\"/g, '&quot;') %>)" class="text-xs text-yellow-600 font-bold hover:text-yellow-700">Edit</button>
        <form method="POST" action="/cash/accounts/<%= acc.id %>/delete" onsubmit="return confirm('Yakin hapus akun ini?')" class="inline">
          <button class="text-xs text-red-600 font-bold hover:text-red-700">Hapus</button>
        </form>
      </div>
    </div>
  <% }) %>
  
  <!-- Add Account -->
  <div class="bg-white rounded-2xl p-5 border-2 border-dashed border-slate-300 flex items-center justify-center cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition-colors" onclick="document.getElementById('addAccModal').classList.remove('hidden')">
    <div class="text-center">
      <i data-lucide="plus-circle" class="w-8 h-8 text-slate-400 mx-auto mb-2"></i>
      <p class="text-sm font-bold text-slate-500">Tambah Akun Kas</p>
    </div>
  </div>
</div>

<!-- Cash Flow Form -->
<div class="bg-white rounded-2xl p-5 border border-slate-200 shadow-sm mb-6">
  <h3 class="font-bold text-slate-800 mb-4 flex items-center gap-2"><i data-lucide="arrow-left-right" class="w-5 h-5 text-blue-600"></i> Catat Arus Kas</h3>
  <form method="POST" action="/cash/flow" class="flex flex-col md:flex-row gap-3">
    <select name="type" class="px-4 py-2.5 border border-slate-300 rounded-xl text-sm" required>
      <option value="in">Kas Masuk</option>
      <option value="out">Kas Keluar</option>
    </select>
    <input type="number" name="amount" placeholder="Jumlah" required class="px-4 py-2.5 border border-slate-300 rounded-xl text-sm flex-1">
    <input type="text" name="category" placeholder="Kategori" class="px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
    <select name="account_id" class="px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
      <option value="">Pilih Akun</option>
      <% cashAccounts.forEach(a => { %><option value="<%= a.id %>"><%= a.name %></option><% }) %>
    </select>
    <input type="text" name="description" placeholder="Keterangan" class="px-4 py-2.5 border border-slate-300 rounded-xl text-sm flex-1">
    <input type="date" name="date" value="<%= new Date().toISOString().split('T')[0] %>" class="px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
    <button type="submit" class="px-4 py-2.5 bg-blue-600 text-white rounded-xl text-sm font-bold hover:bg-blue-700">Simpan</button>
  </form>
</div>

<!-- Cash Flow History -->
<div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
  <div class="p-4 border-b border-slate-200"><h3 class="font-bold text-slate-800">Riwayat Arus Kas</h3></div>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-slate-50 border-b border-slate-200">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-bold text-slate-600 uppercase">Tanggal</th>
          <th class="px-4 py-3 text-left text-xs font-bold text-slate-600 uppercase">Tipe</th>
          <th class="px-4 py-3 text-left text-xs font-bold text-slate-600 uppercase hidden md:table-cell">Kategori</th>
          <th class="px-4 py-3 text-left text-xs font-bold text-slate-600 uppercase hidden md:table-cell">Keterangan</th>
          <th class="px-4 py-3 text-right text-xs font-bold text-slate-600 uppercase">Jumlah</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% if (cashFlows.length === 0) { %>
          <tr><td colspan="5" class="px-4 py-8 text-center text-slate-500">Belum ada arus kas</td></tr>
        <% } %>
        <% cashFlows.forEach(cf => { %>
          <tr class="hover:bg-slate-50">
            <td class="px-4 py-3 text-xs text-slate-500"><%= formatDate(cf.date || cf.created_at) %></td>
            <td class="px-4 py-3">
              <span class="px-2 py-1 rounded-full text-xs font-bold <%= cf.type === 'in' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>"><%= cf.type === 'in' ? 'Masuk' : 'Keluar' %></span>
            </td>
            <td class="px-4 py-3 text-sm hidden md:table-cell"><%= cf.category || '-' %></td>
            <td class="px-4 py-3 text-sm text-slate-500 hidden md:table-cell"><%= cf.description || '-' %></td>
            <td class="px-4 py-3 text-sm font-bold text-right <%= cf.type === 'in' ? 'text-green-700' : 'text-red-700' %>"><%= cf.type === 'in' ? '+' : '-' %> <%= formatCurrency(cf.amount) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Add Account Modal -->
<div id="addAccModal" class="modal-backdrop hidden">
  <div class="modal-content p-6">
    <div class="flex justify-between items-center mb-4">
      <h3 class="font-bold text-lg">Tambah Akun Kas</h3>
      <button onclick="document.getElementById('addAccModal').classList.add('hidden')" class="p-2 hover:bg-slate-100 rounded-lg"><i data-lucide="x" class="w-5 h-5"></i></button>
    </div>
    <form method="POST" action="/cash/accounts">
      <div class="space-y-3">
        <div><label class="block text-sm font-semibold mb-1">Nama *</label><input type="text" name="name" required class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm"></div>
        <div><label class="block text-sm font-semibold mb-1">Tipe</label>
          <select name="type" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
            <option value="cash">Cash</option>
            <option value="bank">Bank</option>
            <option value="ewallet">E-Wallet</option>
          </select>
        </div>
        <div><label class="block text-sm font-semibold mb-1">Warna</label><input type="color" name="color" value="#3b82f6" class="w-full h-10 rounded-xl"></div>
        <div><label class="block text-sm font-semibold mb-1">Saldo Awal</label><input type="number" name="balance" value="0" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm"></div>
      </div>
      <div class="mt-4 flex gap-3">
        <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700">Simpan</button>
        <button type="button" onclick="document.getElementById('addAccModal').classList.add('hidden')" class="px-6 py-2.5 bg-slate-200 text-slate-700 rounded-xl font-bold">Batal</button>
      </div>
    </form>
  </div>
</div>

<!-- Edit Account Modal -->
<div id="editAccModal" class="modal-backdrop hidden">
  <div class="modal-content p-6">
    <div class="flex justify-between items-center mb-4">
      <h3 class="font-bold text-lg">Edit Akun Kas</h3>
      <button onclick="document.getElementById('editAccModal').classList.add('hidden')" class="p-2 hover:bg-slate-100 rounded-lg"><i data-lucide="x" class="w-5 h-5"></i></button>
    </div>
    <form method="POST" id="editAccForm">
      <div class="space-y-3">
        <div><label class="block text-sm font-semibold mb-1">Nama *</label><input type="text" name="name" id="editAccName" required class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm"></div>
        <div><label class="block text-sm font-semibold mb-1">Tipe</label>
          <select name="type" id="editAccType" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
            <option value="cash">Cash</option><option value="bank">Bank</option><option value="ewallet">E-Wallet</option>
          </select>
        </div>
        <div><label class="block text-sm font-semibold mb-1">Warna</label><input type="color" name="color" id="editAccColor" class="w-full h-10 rounded-xl"></div>
      </div>
      <div class="mt-4 flex gap-3">
        <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700">Perbarui</button>
        <button type="button" onclick="document.getElementById('editAccModal').classList.add('hidden')" class="px-6 py-2.5 bg-slate-200 text-slate-700 rounded-xl font-bold">Batal</button>
      </div>
    </form>
  </div>
</div>

<script>
function editAccount(acc) {
  document.getElementById('editAccForm').action = '/cash/accounts/' + acc.id;
  document.getElementById('editAccName').value = acc.name;
  document.getElementById('editAccType').value = acc.type;
  document.getElementById('editAccColor').value = acc.color || '#3b82f6';
  document.getElementById('editAccModal').classList.remove('hidden');
}
</script>
