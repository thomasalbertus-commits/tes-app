<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SuperAdmin Panel - iFix Pro Enterprise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-slate-50">
  <!-- Header -->
  <header class="bg-gradient-to-r from-slate-900 to-slate-800 border-b border-slate-700 sticky top-0 z-50 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 md:px-6 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
          <span class="text-white font-extrabold text-lg">iF</span>
        </div>
        <div>
          <h1 class="text-white font-extrabold text-xl">SuperAdmin Panel</h1>
          <p class="text-slate-400 text-xs">iFix Pro Enterprise</p>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <div class="hidden md:block text-right">
          <p class="text-white font-semibold text-sm"><%= currentUser.name %></p>
          <p class="text-slate-400 text-xs"><%= currentUser.email %></p>
        </div>
        <a href="/logout" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-xl text-sm font-bold transition-colors">
          <i data-lucide="log-out" class="w-4 h-4 inline mr-1"></i> Logout
        </a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 md:px-6 py-6">
    <!-- Flash Messages -->
    <% if (flash && flash.success) { %>
      <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl mb-4 flash-message">
        <strong><%= flash.success %></strong>
      </div>
    <% } %>
    <% if (flash && flash.error) { %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl mb-4 flash-message">
        <strong><%= flash.error %></strong>
      </div>
    <% } %>
    <% if (flash && flash.info) { %>
      <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-xl mb-4 flash-message">
        <strong><%= flash.info %></strong>
      </div>
    <% } %>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-6">
  <div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm text-center">
    <p class="text-xs text-slate-500">Total Owner</p>
    <p class="text-2xl font-extrabold text-blue-600"><%= stats.totalOwners %></p>
  </div>
  <div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm text-center">
    <p class="text-xs text-slate-500">Aktif</p>
    <p class="text-2xl font-extrabold text-green-600"><%= stats.activeOwners %></p>
  </div>
  <div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm text-center">
    <p class="text-xs text-slate-500">Total Toko</p>
    <p class="text-2xl font-extrabold text-purple-600"><%= stats.totalStores %></p>
  </div>
  <div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm text-center">
    <p class="text-xs text-slate-500">Total User</p>
    <p class="text-2xl font-extrabold text-indigo-600"><%= stats.totalUsers %></p>
  </div>
  <div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm text-center">
    <p class="text-xs text-slate-500">Total Servis</p>
    <p class="text-2xl font-extrabold text-teal-600"><%= stats.totalServices %></p>
  </div>
  <div class="bg-white rounded-2xl p-4 border border-slate-200 shadow-sm text-center">
    <p class="text-xs text-slate-500">Total Penjualan</p>
    <p class="text-2xl font-extrabold text-orange-600"><%= stats.totalSales %></p>
  </div>
</div>

<!-- Add Owner Button -->
<div class="flex justify-between items-center mb-4">
  <h3 class="font-bold text-lg text-slate-800">Daftar Tenant</h3>
  <button onclick="document.getElementById('addOwnerModal').classList.remove('hidden')" class="px-4 py-2.5 bg-blue-600 text-white rounded-xl text-sm font-bold hover:bg-blue-700">
    <i data-lucide="plus" class="w-4 h-4 inline mr-1"></i> Tambah Tenant
  </button>
</div>

<!-- Owner List -->
<div class="space-y-4">
  <% owners.forEach(owner => { %>
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
      <!-- Header -->
      <div class="p-5 flex flex-col md:flex-row md:items-center justify-between gap-3 cursor-pointer" onclick="this.parentElement.querySelector('.owner-detail').classList.toggle('hidden')">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold">
            <%= owner.name ? owner.name.charAt(0).toUpperCase() : '?' %>
          </div>
          <div>
            <p class="font-bold text-slate-800"><%= owner.name %></p>
            <p class="text-xs text-slate-500"><%= owner.email %></p>
          </div>
        </div>
        <div class="flex flex-wrap items-center gap-2">
          <!-- Plan badge -->
          <span class="px-2 py-0.5 rounded-full text-xs font-bold <%= owner.plan === 'pro' ? 'bg-gradient-to-r from-amber-400 to-orange-500 text-white' : owner.plan === 'standard' ? 'bg-blue-100 text-blue-700' : 'bg-slate-100 text-slate-700' %>"><%= (owner.plan || 'basic').toUpperCase() %></span>
          <!-- Status badge -->
          <span class="px-2 py-0.5 rounded-full text-xs font-bold <%= owner.status === 'active' && !owner.isExpired ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
            <%= owner.status === 'active' && !owner.isExpired ? 'AKTIF' : owner.isExpired ? 'EXPIRED' : owner.status?.toUpperCase() %>
          </span>
          <!-- Stats -->
          <span class="text-xs text-slate-400"><%= owner.storeCount %> toko | <%= owner.userCount %> user | <%= owner.serviceCount %> servis</span>
          <!-- Spy -->
          <form method="POST" action="/superadmin/spy/<%= owner.id %>" class="inline">
            <button class="px-3 py-1 bg-yellow-100 text-yellow-700 rounded-lg text-xs font-bold hover:bg-yellow-200" title="Spy Mode"><i data-lucide="eye" class="w-3 h-3 inline"></i> Spy</button>
          </form>
          <i data-lucide="chevron-down" class="w-4 h-4 text-slate-400"></i>
        </div>
      </div>

      <!-- Detail (hidden by default) -->
      <div class="owner-detail hidden border-t border-slate-200">
        <div class="p-5 space-y-4">
          <!-- Subscription Info -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
            <div class="bg-slate-50 rounded-xl p-3">
              <p class="text-xs text-slate-500 mb-1">Langganan Aktif</p>
              <p class="text-sm font-semibold"><%= owner.subscription_activated_at ? new Date(owner.subscription_activated_at).toLocaleDateString('id-ID') : '-' %></p>
            </div>
            <div class="bg-slate-50 rounded-xl p-3">
              <p class="text-xs text-slate-500 mb-1">Berakhir</p>
              <p class="text-sm font-semibold <%= owner.isExpired ? 'text-red-600' : '' %>"><%= owner.subscription_expires_at ? new Date(owner.subscription_expires_at).toLocaleDateString('id-ID') : '-' %></p>
            </div>
            <div class="bg-slate-50 rounded-xl p-3">
              <p class="text-xs text-slate-500 mb-1">Durasi</p>
              <p class="text-sm font-semibold"><%= owner.subscription_duration || 0 %> hari</p>
            </div>
          </div>

          <!-- Actions: Plan, Extend, Message -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
            <!-- Change Plan -->
            <form method="POST" action="/superadmin/owner/<%= owner.id %>/plan" class="bg-purple-50 rounded-xl p-3">
              <p class="text-xs font-bold text-purple-700 mb-2">Ubah Plan</p>
              <div class="flex gap-2">
                <select name="plan" class="flex-1 px-3 py-2 border rounded-lg text-sm">
                  <option value="basic" <%= owner.plan === 'basic' ? 'selected' : '' %>>Basic</option>
                  <option value="standard" <%= owner.plan === 'standard' ? 'selected' : '' %>>Standard</option>
                  <option value="pro" <%= owner.plan === 'pro' ? 'selected' : '' %>>Pro</option>
                </select>
                <button class="px-3 py-2 bg-purple-600 text-white rounded-lg text-xs font-bold">Ubah</button>
              </div>
            </form>

            <!-- Extend Subscription -->
            <form method="POST" action="/superadmin/owner/<%= owner.id %>/extend" class="bg-green-50 rounded-xl p-3">
              <p class="text-xs font-bold text-green-700 mb-2">Perpanjang</p>
              <div class="flex gap-2 mb-2">
                <input type="number" name="duration" value="30" class="w-20 px-2 py-2 border rounded-lg text-sm" placeholder="Hari">
                <input type="number" name="amount" placeholder="Nominal" class="flex-1 px-2 py-2 border rounded-lg text-sm">
              </div>
              <div class="flex gap-2">
                <select name="method" class="flex-1 px-2 py-2 border rounded-lg text-sm">
                  <option value="transfer">Transfer</option>
                  <option value="cash">Cash</option>
                  <option value="qris">QRIS</option>
                </select>
                <button class="px-3 py-2 bg-green-600 text-white rounded-lg text-xs font-bold">Aktifkan</button>
              </div>
            </form>

            <!-- Admin Message -->
            <form method="POST" action="/superadmin/owner/<%= owner.id %>/message" class="bg-blue-50 rounded-xl p-3">
              <p class="text-xs font-bold text-blue-700 mb-2">Kirim Pesan Admin</p>
              <textarea name="message" rows="2" class="w-full px-3 py-2 border rounded-lg text-sm mb-2" placeholder="Pesan untuk tenant..."><%= owner.admin_message || '' %></textarea>
              <button class="px-3 py-2 bg-blue-600 text-white rounded-lg text-xs font-bold">Kirim</button>
            </form>
          </div>

          <!-- Access Rights -->
          <div class="bg-slate-50 rounded-xl p-4">
            <form method="POST" action="/superadmin/owner/<%= owner.id %>/rights">
              <p class="text-sm font-bold text-slate-700 mb-3">Hak Akses Menu & Fitur</p>
              
              <p class="text-xs font-bold text-slate-500 uppercase mb-2 mt-3">Menu Akses</p>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-2 mb-4">
                <% const menuKeys = ['menu_dashboard','menu_report','menu_service','menu_sales','menu_purchase','menu_return_sales','menu_return_purchase','menu_payable','menu_receivable','menu_cash','menu_inventory','menu_supplier','menu_customers','menu_hr','menu_users','menu_settings','menu_finance']; %>
                <% menuKeys.forEach(key => { %>
                  <label class="flex items-center gap-2 bg-white p-2 rounded-lg text-xs cursor-pointer">
                    <input type="checkbox" name="<%= key %>" value="on" <%= owner.accessRights && owner.accessRights[key] ? 'checked' : '' %> class="rounded">
                    <span><%= key.replace('menu_','').replace(/_/g,' ') %></span>
                  </label>
                <% }) %>
              </div>

              <p class="text-xs font-bold text-slate-500 uppercase mb-2">Fitur Akses</p>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-2 mb-4">
                <% const featureKeys = ['feature_delete','feature_print','feature_share','feature_stock_add','feature_backup','feature_finance_edit','feature_employee_edit','feature_service_edit','feature_sales_edit','feature_inventory_edit','feature_customer_edit','feature_import_export','feature_multi_branch','feature_qc_checklist','feature_kelengkapan','feature_accounting']; %>
                <% featureKeys.forEach(key => { %>
                  <label class="flex items-center gap-2 bg-white p-2 rounded-lg text-xs cursor-pointer">
                    <input type="checkbox" name="<%= key %>" value="on" <%= owner.accessRights && owner.accessRights[key] ? 'checked' : '' %> class="rounded">
                    <span><%= key.replace('feature_','').replace(/_/g,' ') %></span>
                  </label>
                <% }) %>
              </div>

              <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-bold hover:bg-indigo-700"><i data-lucide="save" class="w-4 h-4 inline mr-1"></i> Simpan Hak Akses</button>
            </form>
          </div>

          <!-- Delete -->
          <div class="flex justify-end pt-2">
            <form method="POST" action="/superadmin/owner/<%= owner.id %>/delete" onsubmit="return confirm('PERHATIAN: Semua data tenant akan dihapus permanen. Lanjutkan?')">
              <button class="px-4 py-2 bg-red-600 text-white rounded-lg text-sm font-bold hover:bg-red-700"><i data-lucide="trash-2" class="w-4 h-4 inline mr-1"></i> Hapus Tenant</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<!-- Add Owner Modal -->
<div id="addOwnerModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50">
  <div class="bg-white rounded-2xl p-6 w-full max-w-lg mx-4 max-h-[90vh] overflow-y-auto">
    <div class="flex justify-between items-center mb-4">
      <h3 class="font-bold text-lg">Tambah Tenant Baru</h3>
      <button onclick="document.getElementById('addOwnerModal').classList.add('hidden')" class="text-slate-400 hover:text-slate-600 text-xl">&times;</button>
    </div>
    <form method="POST" action="/superadmin/owner">
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-semibold mb-1">Nama Owner *</label>
          <input type="text" name="name" required class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
        </div>
        <div>
          <label class="block text-sm font-semibold mb-1">Email *</label>
          <input type="email" name="email" required class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
        </div>
        <div>
          <label class="block text-sm font-semibold mb-1">Password *</label>
          <input type="password" name="password" required value="password123" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
        </div>
        <div>
          <label class="block text-sm font-semibold mb-1">Nama Toko</label>
          <input type="text" name="store_name" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm" placeholder="Default: Toko [Nama Owner]">
        </div>
        <div>
          <label class="block text-sm font-semibold mb-1">Alamat</label>
          <input type="text" name="address" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
        </div>
        <div>
          <label class="block text-sm font-semibold mb-1">No. HP</label>
          <input type="text" name="phone" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
        </div>
        <div>
          <label class="block text-sm font-semibold mb-1">Plan</label>
          <select name="plan" class="w-full px-4 py-2.5 border border-slate-300 rounded-xl text-sm">
            <option value="basic">Basic</option>
            <option value="standard">Standard</option>
            <option value="pro">Pro</option>
          </select>
        </div>
      </div>
      <div class="mt-4 flex gap-2">
        <button type="submit" class="flex-1 px-4 py-3 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700">Buat Tenant</button>
        <button type="button" onclick="document.getElementById('addOwnerModal').classList.add('hidden')" class="px-4 py-3 bg-slate-200 text-slate-700 rounded-xl font-bold hover:bg-slate-300">Batal</button>
      </div>
    </form>
  </div>
</div>
  </main>

  <!-- Scripts -->
  <script>
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }

    // Auto-dismiss flash messages
    const flashMessages = document.querySelectorAll('.flash-message');
    flashMessages.forEach(msg => {
      setTimeout(() => {
        msg.style.transition = 'opacity 0.5s, transform 0.5s';
        msg.style.opacity = '0';
        msg.style.transform = 'translateY(-10px)';
        setTimeout(() => msg.remove(), 500);
      }, 5000);
    });

    // Re-init icons on modal open
    document.querySelectorAll('[onclick*="Modal"]').forEach(btn => {
      btn.addEventListener('click', () => {
        setTimeout(() => lucide.createIcons(), 100);
      });
    });
  </script>
</body>
</html>
