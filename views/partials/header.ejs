<header class="bg-white border-b border-slate-200 px-4 md:px-6 py-3 flex items-center justify-between sticky top-0 z-20 no-print">
  <!-- Mobile menu button -->
  <button id="sidebarToggle" class="md:hidden p-2 rounded-lg hover:bg-slate-100 transition-colors">
    <i data-lucide="menu" class="w-6 h-6 text-slate-600"></i>
  </button>
  
  <!-- Page Title -->
  <div class="flex-1 ml-2 md:ml-0">
    <h2 class="text-lg md:text-xl font-bold text-slate-800"><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Dashboard' %></h2>
    <% if (typeof currentStore !== 'undefined' && currentStore) { %>
      <p class="text-xs text-slate-500"><%= currentStore.name %></p>
    <% } %>
  </div>
  
  <!-- Right actions -->
  <div class="flex items-center gap-2">
    <% if (typeof currentOwner !== 'undefined' && currentOwner) { %>
      <span class="hidden md:inline-block px-2 py-1 text-xs font-semibold rounded-full <%= currentOwner.plan === 'pro' ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700' %>">
        <%= currentOwner.plan ? currentOwner.plan.toUpperCase() : 'BASIC' %>
      </span>
    <% } %>
    
    <div class="hidden md:block text-right">
      <p class="text-sm font-medium text-slate-700"><%= typeof currentUser !== 'undefined' && currentUser ? currentUser.name : '' %></p>
      <p class="text-xs text-slate-500 capitalize"><%= typeof currentUser !== 'undefined' && currentUser ? currentUser.role : '' %></p>
    </div>
  </div>
</header>
